{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':dependencyDashboard',
  ],
  timezone: 'Asia/Tokyo',
  rangeStrategy: 'bump',
  prConcurrentLimit: 20,
  prHourlyLimit: 10,
  reviewers: [
    'Soli0222',
  ],
  semanticCommits: 'enabled',
  prCreation: 'immediate',
  rebaseWhen: 'auto',
  dependencyDashboard: true,
  vulnerabilityAlerts: {
    enabled: true,
    labels: [
      'security',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      fileMatch: ['go\\.mod$'],
      matchStrings: ['go (?<currentValue>\\d+\\.\\d+\\.\\d+)\\n'],
      depNameTemplate: 'golang',
      datasourceTemplate: 'golang-version',
    },
  ],
  packageRules: [
    {
      matchDepNames: ['golang'],
      groupName: 'golang version',
      commitMessageTopic: 'Go version',
      automerge: true,
    },
    {
      matchManagers: [
        'github-actions',
      ],
      commitMessageTopic: 'GitHub Action {{depName}}',
      automerge: true,
    },
    {
      matchManagers: [
        'gomod',
      ],
      commitMessageTopic: 'Go {{depName}}',
      automerge: true,
    },
    {
      matchManagers: [
        'docker-compose',
        'dockerfile',
      ],
      matchDepNames: ['!golang'],
      commitMessageTopic: 'Docker {{depName}}',
      automerge: true,
    },
  ],
}
